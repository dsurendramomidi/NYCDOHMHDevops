<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <description>Adding a filter condition to not to consider MDR records</description>
    <interviewLabel>FW {!$Flow.CurrentDateTime}</interviewLabel>
    <label>FW_IIT_CREATE</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>UpdateIIT_ID</name>
        <label>UpdateIIT_ID</label>
        <locationX>1100</locationX>
        <locationY>357</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Case__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Related_Case_ID__c</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>IIT__c</field>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
        <object>Application_Dashboard__c</object>
    </recordUpdates>
    <start>
        <locationX>971</locationX>
        <locationY>48</locationY>
        <connector>
            <targetReference>UpdateIIT_ID</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>MDR_Requester_Email__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>IIT__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
