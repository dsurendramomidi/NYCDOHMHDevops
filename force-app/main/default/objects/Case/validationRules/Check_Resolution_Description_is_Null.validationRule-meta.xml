<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Resolution_Description_is_Null</fullName>
    <active>true</active>
    <errorConditionFormula>ISBLANK(Resolution_Description__c) &amp;&amp; ISPICKVAL(Status, &apos;Closed&apos;)</errorConditionFormula>
    <errorDisplayField>Resolution_Description__c</errorDisplayField>
    <errorMessage>Please fill the Resolution Description before closing the ticket.</errorMessage>
</ValidationRule>
