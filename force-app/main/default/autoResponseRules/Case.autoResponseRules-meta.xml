<?xml version="1.0" encoding="UTF-8"?>
<AutoResponseRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <autoResponseRule>
        <fullName>Requester_AutoResponse</fullName>
        <active>true</active>
        <ruleEntry>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>New</value>
            </criteriaItems>
            <notifyCcRecipients>true</notifyCcRecipients>
            <replyToEmail>noreply@health.nyc.gov</replyToEmail>
            <senderEmail>gtaylor@health.nyc.gov</senderEmail>
            <senderName>No Reply</senderName>
            <template>unfiled$public/Service_Request_Submitted_Case</template>
        </ruleEntry>
    </autoResponseRule>
</AutoResponseRules>
